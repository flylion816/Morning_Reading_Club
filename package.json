{
  "name": "morning-reading-miniapp",
  "version": "1.0.0",
  "description": "晨读营小程序 - 在晨光中，遇见更好的自己",
  "main": "app.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "echo '请使用微信开发者工具打开本项目'",
    "build": "echo '请使用微信开发者工具进行编译'",
    "lint": "npm run lint:backend && npm run lint:admin && npm run lint:miniprogram",
    "lint:backend": "cd backend && eslint 'src/**/*.js' || true",
    "lint:admin": "cd admin && eslint 'src/**/*.{ts,vue}' || true",
    "lint:miniprogram": "eslint 'miniprogram/**/*.js' || true",
    "format": "prettier --write '**/*.{js,ts,vue,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,ts,vue,json,md,yml,yaml}'",
    "test": "jest",
    "convert-icons": "node scripts/convert-icons.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "wechat",
    "miniprogram",
    "morning-reading",
    "habit",
    "education"
  ],
  "author": "晨读营团队",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "eslint": "^8.0.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "weui-miniprogram": "^1.2.6"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
