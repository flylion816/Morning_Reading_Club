<!--通知徽章组件-->
<view class="notification-badge-wrapper">
  <view
    class="badge-button"
    bindtap="handleNotificationTap"
  >
    <image
      class="bell-icon"
      src="/assets/icons/bell.png"
      mode="aspectFit"
    ></image>
    <view class="badge" wx:if="{{unreadCount > 0}}">
      <text class="badge-text">{{unreadCount > 99 ? '99+' : unreadCount}}</text>
    </view>
  </view>
</view>

<style>
@import './notification-badge.wxss';
</style>
