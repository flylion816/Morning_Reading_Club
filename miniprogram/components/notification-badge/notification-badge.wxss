/**
 * 通知徽章组件样式
 */

.notification-badge-wrapper {
  position: relative;
}

.badge-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  position: relative;
  cursor: pointer;
}

.bell-icon {
  width: 100%;
  height: 100%;
  padding: 12rpx;
  box-sizing: border-box;
}

/* 徽章 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #fa5151;
  border-radius: 50%;
  min-width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.badge-text {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1;
}

/* 按压效果 */
.badge-button:active {
  opacity: 0.8;
}
