.course-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fbff 100%);
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 0;
  display: flex;
  gap: 24rpx;
  transition: all 0.3s;
}

.course-card.pending {
  background: linear-gradient(135deg, #f0f5ff 0%, #e8f4ff 100%);
}

/* 左侧缩略图 */
.course-thumb {
  width: 120rpx;
  height: 150rpx;
  flex-shrink: 0;
  /* background 通过 inline style 动态设置 */
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.thumb-icon {
  font-size: 64rpx;
}

/* 右侧内容区 */
.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.course-title {
  font-weight: bold;
  color: #333333;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-meta {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

/* 进度条区域 */
.course-progress {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar {
  height: 8rpx;
  background: linear-gradient(90deg, #e2e8f0 0%, #cbd5e0 100%);
  border-radius: 4rpx;
  overflow: hidden;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4a90e2 0%, #357abd 100%);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 6rpx rgba(74, 144, 226, 0.3);
  transition: width 0.3s ease;
}

.course-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.course-actions.period-mode {
  justify-content: flex-end;
}

.status-text {
  font-size: 24rpx;
  color: #666666;
  flex: 1;
}

.status-text.status-right {
  flex: none;
  text-align: right;
  font-weight: 500;
  color: #4a90e2;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  border: none;
  transition: all 0.3s;
  flex-shrink: 0;
  margin-left: auto;
}

.action-btn.primary {
  background: #4a90e2;
  color: #ffffff;
}

.action-btn.secondary {
  background: transparent;
  color: #4a90e2;
  border: 2rpx solid #4a90e2;
}

.action-btn.secondary::after {
  border: none;
}
