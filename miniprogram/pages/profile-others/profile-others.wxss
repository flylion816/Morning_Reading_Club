.page-profile-others {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.user-card {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 40rpx 32rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.user-avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar-emoji {
  font-size: 60rpx;
}

.user-nickname {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.user-signature {
  font-size: 26rpx;
  opacity: 0.9;
}

.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stats-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.stats-icon {
  font-size: 32rpx;
}

.stats-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stats-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
}

.stats-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 小凡看见卡片 */
.insights-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.insights-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.insights-icon {
  font-size: 32rpx;
}

.insights-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.insights-content {
  background: #f5f8ff;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 6rpx solid #4a90e2;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.insights-link {
  font-size: 26rpx;
  color: #4a90e2;
  font-weight: bold;
}

.insights-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 返回按钮 */
.back-btn {
  background: white;
  border-radius: 48rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.back-btn text {
  font-size: 28rpx;
  color: #4a90e2;
  font-weight: 500;
}
