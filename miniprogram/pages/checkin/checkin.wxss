.page-checkin {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 160rpx;
}

/* 课程标题 */
.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.course-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

/* 内容预览（未展开） */
.content-preview {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.section-preview {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.section-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.section-content-short {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 展开按钮 */
.expand-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
  color: #4a90e2;
  cursor: pointer;
}

.arrow {
  font-size: 20rpx;
}

/* 展开后的完整内容 */
.full-content {
  margin-bottom: 24rpx;
}

.content-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.section-title .section-icon {
  margin-right: 12rpx;
}

.section-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  text-align: justify;
}

/* 日记输入区域 */
.diary-input-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.diary-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  margin-bottom: 24rpx;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.tool-icon {
  font-size: 48rpx;
}

.tool-name {
  font-size: 22rpx;
  color: #666;
}

/* 可见范围 */
.visibility-section {
  margin-bottom: 24rpx;
}

.visibility-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.visibility-options {
  display: flex;
  gap: 16rpx;
}

.visibility-option {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 48rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border: 2rpx solid transparent;
}

.visibility-option.active {
  color: #4a90e2;
  background: #e8f4fd;
  border-color: #4a90e2;
}

/* 提示信息 */
.tips {
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.tip-item {
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-cancel {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.btn-cancel::after {
  border: none;
}

.btn-submit {
  flex: 2;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-submit::after {
  border: none;
}
