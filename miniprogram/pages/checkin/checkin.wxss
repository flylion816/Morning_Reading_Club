.page-checkin {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.checkin-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 40rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.checkin-prompt {
  font-size: 24rpx;
  opacity: 0.9;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.checkin-textarea {
  width: 100%;
  min-height: 400rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.submit-btn {
  width: 100%;
  background: #4a90e2;
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn:disabled {
  background: #cccccc;
}

.submit-btn::after {
  border: none;
}
