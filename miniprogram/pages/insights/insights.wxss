.page-insights {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.insights-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.header-emoji {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.header-title {
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.insights-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.insight-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 8rpx solid #4a90e2;
}

.insight-day {
  font-size: 22rpx;
  color: #4a90e2;
  margin-bottom: 8rpx;
}

.insight-title {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.insight-preview {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.insight-date {
  font-size: 22rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}
