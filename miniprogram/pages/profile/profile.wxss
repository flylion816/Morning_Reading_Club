/* 个人中心样式 */

.page-profile {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 登录容器 - 未登录状态 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 48rpx;
  position: relative;
}

/* 登录头部 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 0.8s ease;
}

.logo {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  text-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.app-title {
  font-size: 56rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: fadeInUp 0.8s ease;
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a650 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  margin-bottom: 32rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.wechat-login-btn.loading {
  opacity: 0.7;
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
}

/* 用户协议 */
.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 22rpx;
  color: #9ca3af;
}

.agreement-text {
  color: #9ca3af;
}

.agreement-link {
  color: #4a90e2;
  margin: 0 4rpx;
}

/* 返回首页按钮 */
.back-home {
  margin-top: 60rpx;
  padding: 20rpx 40rpx;
  color: white;
  font-size: 28rpx;
  opacity: 0.8;
  animation: fadeIn 1s ease;
}

/* 用户内容区域 - 已登录状态 */
.user-content {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部横幅 */
.home-banner {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  padding: 40rpx 32rpx;
  position: relative;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.banner-mascot {
  font-size: 96rpx;
  position: relative;
  z-index: 2;
}

.banner-bubble {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  position: relative;
  z-index: 1;
}

.banner-bubble::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-right: 16rpx solid rgba(255, 255, 255, 0.2);
}

.bubble-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  line-height: 1.6;
  white-space: pre-line;
}

/* 内容区域 */
.content-area {
  padding: 24rpx;
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 今日任务 */
.today-task {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
}

.task-cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f0f0f0;
}

.task-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.task-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-date {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.task-progress {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.progress-icon {
  font-size: 24rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  min-width: 60rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 20rpx;
  color: #666;
  white-space: nowrap;
}

.today-task-empty {
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

/* 统一的区块样式 */
.stats-section,
.insights-section,
.requests-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 32rpx;
}

.section-header-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 统计区域 */
.stats-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
}

.stats-value-large {
  font-size: 32rpx;
  font-weight: bold;
  color: #4a90e2;
}

/* 小凡看见区域 */
.insights-content {
  background: #f0f5ff;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 8rpx solid #4a90e2;
}

.insights-action {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.action-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #4a90e2;
}

.action-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.6;
}

/* 请求列表 */
.requests-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.request-item-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.request-user-emoji {
  font-size: 40rpx;
}

.request-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.request-user-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.request-time {
  font-size: 22rpx;
  color: #999999;
}

.request-btn {
  padding: 8rpx 24rpx;
  background: #4a90e2;
  color: white;
  border: none;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.request-btn::after {
  border: none;
}

.requests-empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999999;
}

/* 创建打卡浮动按钮 */
.fab-button {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  border-radius: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.4);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
  margin-bottom: 4rpx;
}

.fab-text {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 登录页面动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
