/* 个人中心样式 */

.page-profile {
  min-height: 100vh;
  background: var(--color-bg-secondary);
  padding-bottom: 40rpx;
}

/* 头部区域 */
.profile-header {
  position: relative;
  padding: 80rpx 32rpx 48rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

/* 用户信息 */
.user-info-wrapper {
  display: flex;
  align-items: center;
  gap: 32rpx;
  position: relative;
  z-index: 1;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-join-date {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 未登录状态 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  position: relative;
  z-index: 1;
}

.login-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  opacity: 0.6;
}

.login-btn {
  padding: 20rpx 60rpx;
  background: white;
  color: #4a90e2;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.login-btn::after {
  border: none;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: white;
  margin: -40rpx 32rpx 32rpx;
  padding: 40rpx 0;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #4a90e2;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(
    to bottom,
    transparent,
    #e5e7eb 20%,
    #e5e7eb 80%,
    transparent
  );
  align-self: center;
}

/* 功能菜单 */
.menu-section {
  margin: 0 32rpx 32rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1px solid #f3f4f6;
  transition: background 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f9fafb;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.menu-arrow {
  font-size: 48rpx;
  color: #cbd5e0;
  font-weight: 300;
}

/* 退出登录 */
.logout-section {
  margin: 0 32rpx;
}

.logout-btn {
  width: 100%;
  padding: 32rpx;
  background: white;
  color: #ff6b6b;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  opacity: 0.8;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
