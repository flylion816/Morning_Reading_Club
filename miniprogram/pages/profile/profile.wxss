/* 个人中心样式 */

.page-profile {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.user-avatar-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin: 0 auto 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar-emoji {
  font-size: 48rpx;
}

.user-nickname {
  font-weight: bold;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.user-signature {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 未登录状态 */
.login-prompt {
  cursor: pointer;
}

.login-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 收到的小凡看见请求区域 */
.request-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.request-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.request-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.request-title {
  flex: 1;
  font-weight: bold;
  font-size: 28rpx;
  color: #333333;
}

.request-badge {
  background: #ff4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
  min-width: 32rpx;
  text-align: center;
}

.request-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.request-item-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.request-user-emoji {
  font-size: 40rpx;
}

.request-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.request-user-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.request-time {
  font-size: 22rpx;
  color: #999999;
}

.request-btn {
  padding: 8rpx 24rpx;
  background: #4a90e2;
  color: white;
  border: none;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.request-btn::after {
  border: none;
}

.request-empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999999;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-weight: bold;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-label {
  font-size: 26rpx;
  color: #666666;
}

.stats-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

/* 小凡看见卡片 */
.insights-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.insights-link {
  background: #f0f5ff;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 8rpx solid #4a90e2;
  transition: all 0.3s;
}

.insights-link:active {
  background: linear-gradient(135deg, #e8f4fd 0%, #f0f5ff 100%);
}

.insights-link-title {
  font-weight: bold;
  color: #4a90e2;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.insights-link-desc {
  font-size: 22rpx;
  color: #666666;
  line-height: 1.6;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
