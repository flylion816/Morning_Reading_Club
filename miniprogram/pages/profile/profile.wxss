/* 个人中心样式 */

.page-profile {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 登录容器 - 未登录状态 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 48rpx;
  position: relative;
}

/* 登录头部 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 0.8s ease;
}

.logo {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  text-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  line-height: 1.3;
}

.app-title-second {
  font-size: 56rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.app-slogan-extra {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 8rpx;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: fadeInUp 0.8s ease;
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a650 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  margin-bottom: 32rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.wechat-login-btn.loading {
  opacity: 0.7;
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
}

/* 用户协议 */
.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 22rpx;
  color: #9ca3af;
}

.agreement-text {
  color: #9ca3af;
}

.agreement-link {
  color: #4a90e2;
  margin: 0 4rpx;
}

/* 返回首页按钮 */
.back-home {
  margin-top: 60rpx;
  padding: 20rpx 40rpx;
  color: white;
  font-size: 28rpx;
  opacity: 0.8;
  animation: fadeIn 1s ease;
}

/* 用户内容区域 - 已登录状态 */
.user-content {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 0;
}

/* 顶部横幅 */
.home-banner {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  padding: 40rpx 32rpx;
  position: relative;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 2;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  cursor: pointer;
  transition: all 0.3s;
}

.user-avatar-container:active {
  transform: scale(0.98);
}

.avatar-edit-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #4a90e2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 3rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.user-avatar-img {
  width: 100%;
  height: 100%;
}

.user-avatar-emoji {
  font-size: 80rpx;
}

/* 用户信息和气泡的容器 */
.banner-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

/* 用户信息显示（昵称和本期） */
.user-info-display {
  z-index: 2;
  position: relative;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.current-period {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 400;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.banner-bubble {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  position: relative;
  z-index: 1;
}

.banner-bubble::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-bottom: 16rpx solid transparent;
  border-right: 16rpx solid rgba(255, 255, 255, 0.2);
}

.bubble-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  line-height: 1.6;
  white-space: pre-line;
}

/* 内容区域 */
.content-area {
  padding: 24rpx;
}

/* 今日任务区域 */
.period-card {
  display: flex;
  gap: 16rpx;
  align-items: stretch;
  padding: 8rpx 0;
}

.period-cover {
  width: 120rpx;
  height: 150rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.cover-emoji {
  font-size: 56rpx;
  position: relative;
  z-index: 1;
}

.period-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.period-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.period-meta {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-bottom: 12rpx;
}

.meta-subtitle {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.meta-date {
  font-size: 22rpx;
  color: #999;
}

.meta-days {
  font-size: 22rpx;
  color: #999;
}

.period-progress {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar-wrapper {
  flex: 1;
  height: 8rpx;
  background: rgba(74, 144, 226, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-status {
  font-size: 22rpx;
  color: #4a90e2;
  font-weight: 500;
  white-space: nowrap;
}

.task-empty {
  text-align: center;
  padding: 60rpx 32rpx;
  color: #999;
  font-size: 26rpx;
}

/* 今日日期范围显示 */
.today-date-range {
  font-size: 20rpx;
  color: #999;
  padding: 0;
  margin: 4rpx 0 8rpx 0;
  text-align: left;
  font-weight: 400;
}

/* 统一的区块样式 */
.task-section,
.insights-section,
.requests-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 32rpx;
}

.section-header-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.section-period-name {
  font-size: 22rpx;
  color: #999;
  font-weight: 400;
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  white-space: nowrap;
}

/* 小凡看见区域 */
.insights-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.insight-item {
  background: #f5f8ff;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 6rpx solid #4a90e2;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.insight-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.insight-type-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.insight-type-icon {
  font-size: 20rpx;
  font-weight: 500;
}

.insight-type-label {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.insight-day {
  font-size: 24rpx;
  color: #4a90e2;
  font-weight: bold;
  white-space: nowrap;
}

.insight-content-preview {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.insight-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #4a90e2;
  line-height: 1.4;
}

.insight-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.insight-empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

.insights-more {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
  border-top: 2rpx solid #f0f0f0;
}

.more-text {
  font-size: 26rpx;
  color: #4a90e2;
  font-weight: 500;
}

.more-arrow {
  font-size: 24rpx;
  color: #4a90e2;
}

/* 请求列表 */
.requests-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 16rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.request-item-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.request-user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.request-avatar-text {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
}

.request-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.request-user-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.request-time {
  font-size: 24rpx;
  color: #999999;
}

.request-actions {
  display: flex;
  gap: 12rpx;
}

.request-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.approve-btn {
  background: #4a90e2;
  color: white;
}

.approve-btn:active {
  transform: scale(0.95);
  background: #357abd;
}

.reject-btn {
  background: #f0f0f0;
  color: #999;
}

.reject-btn:active {
  transform: scale(0.95);
  background: #e0e0e0;
}

.requests-empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999999;
}

/* 创建打卡按钮 */
.create-checkin-btn {
  position: fixed;
  right: 32rpx;
  bottom: 80rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  border-radius: 48rpx;
  padding: 20rpx 36rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.create-checkin-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}

.btn-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 登录页面动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 编辑个人信息模态框 */
.edit-profile-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 999;
  animation: slideUp 0.3s ease;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 32rpx 60rpx 32rpx;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  cursor: pointer;
  transition: color 0.3s;
}

.modal-close:active {
  color: #666;
}

.modal-section {
  margin-bottom: 32rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 头像选择 */
.avatar-options {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.avatar-option {
  width: 100%;
  aspect-ratio: 1;
  border: 3rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
}

.avatar-option:active {
  transform: scale(0.95);
}

.avatar-option.selected {
  border-color: #4a90e2;
  background: #f5f8ff;
  box-shadow: 0 0 12rpx rgba(74, 144, 226, 0.3);
}

.avatar-option-text {
  font-size: 48rpx;
}

/* 昵称输入 */
.modal-input {
  width: 100%;
  padding: 16rpx 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: border-color 0.3s;
  min-height: 60rpx;
  line-height: 1.8;
  display: flex;
  align-items: center;
  height: 60rpx;
}

.modal-input:focus {
  border-color: #4a90e2;
}

.input-placeholder {
  color: #ccc;
  font-size: 28rpx;
  line-height: 1.8;
}

.input-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 操作按钮 */
.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-cancel:active {
  background: #e0e0e0;
}

.btn-submit {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
}

.btn-submit:active:not(.loading) {
  transform: scale(0.98);
}

.btn-submit.loading {
  opacity: 0.7;
  pointer-events: none;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}
