.page-agreement {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.section {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #4a90e2;
}

.section-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
}

.item {
  margin: 8rpx 0;
  padding-left: 24rpx;
}

.footer-space {
  height: 40rpx;
}

.footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  background: white;
}

.btn-secondary {
  width: 100%;
  background: #999;
  color: white;
  border-radius: 8rpx;
}
