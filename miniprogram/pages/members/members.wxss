/* 成员列表页面样式 */

.page-members {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 成员统计头部 */
.members-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 48rpx 32rpx;
  text-align: center;
}

.total-count {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.count-label {
  font-size: 28rpx;
}

.count-number {
  font-size: 56rpx;
  font-weight: bold;
}

/* 成员列表 */
.members-list {
  padding: 24rpx;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.member-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.member-avatar .avatar-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.member-join-date {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #9ca3af;
}
