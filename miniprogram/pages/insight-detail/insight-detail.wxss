.page-insight-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* 顶部标题卡片 */
.detail-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.day-title {
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-word;
  white-space: normal;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.day-period {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: normal;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.day-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 内容区 */
.content-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 32rpx;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* rich-text 内部样式 */
.content-text rich-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

/* 富文本内的段落样式 */
.content-text p {
  margin: 16rpx 0;
  line-height: 1.8;
  color: #333;
}

/* 富文本内的换行符样式 */
.content-text br {
  display: block;
  height: 0;
  margin: 8rpx 0;
}

/* 底部按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-back {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.btn-back::after {
  border: none;
}

.btn-back:active {
  background: #e0e0e0;
  transform: scale(0.98);
}

.btn-share {
  flex: 2;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-share::after {
  border: none;
}

/* ===== 转发弹窗样式 ===== */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.share-modal-content {
  width: 100%;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 32rpx 32rpx;
  animation: slideUp 0.3s ease-out;
}

.share-modal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.share-friend-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s;
}

.share-friend-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.friend-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  object-fit: cover;
}

.friend-info {
  flex: 1;
}

.friend-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.friend-desc {
  font-size: 22rpx;
  color: #999;
}

.friend-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.share-modal-cancel {
  text-align: center;
  padding: 20rpx;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-weight: 500;
}

/* ===== 转发成功提示 ===== */
.share-success-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
  animation: popIn 0.3s ease-out;
}

@keyframes popIn {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  object-fit: cover;
}

.success-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.success-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.success-hint {
  font-size: 24rpx;
  color: #ccc;
}

/* ===== 分享菜单弹窗（开发环境） ===== */
.share-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.share-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1001;
  max-height: 60vh;
  animation: slideUp 0.3s ease-out;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.friends-list {
  padding: 16rpx 32rpx;
  max-height: 50vh;
}

.friend-item {
  display: flex;
  align-items: center;
  padding: 24rpx 16rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.friend-item:active {
  background: #f5f5f5;
}

.friend-item .friend-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.friend-item image.friend-avatar {
  object-fit: cover;
}

.friend-info {
  flex: 1;
}

.friend-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.share-btn {
  background: #4a90e2;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  min-width: 80rpx;
  text-align: center;
}

.share-btn::after {
  border: none;
}
