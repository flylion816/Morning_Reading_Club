.page-insight-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.detail-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.day-title {
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.day-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.content-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 2;
  color: #333;
}

.share-btn {
  width: 100%;
  background: #4a90e2;
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.share-btn::after {
  border: none;
}
