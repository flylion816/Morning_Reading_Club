<view class="page-insight-detail">
  <view class="detail-header">
    <view class="day-title">第{{insight.dayNumber}}天 {{insight.title}}</view>
    <view class="day-subtitle">你的个性化学习反馈</view>
  </view>

  <view class="content-section">
    <rich-text nodes="{{insight.content}}" />
  </view>

  <button class="share-btn" bindtap="handleShare">
    分享这个看见
  </button>
</view>
