/* 返回按钮 */
.back-home {
  margin-top: 60rpx;
  padding: 20rpx 40rpx;
  color: white;
  font-size: 28rpx;
  opacity: 0.8;
  animation: fadeIn 1s ease;
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
