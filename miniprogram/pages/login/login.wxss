/* 登录页面样式 */

.page-login {
  min-height: 100vh;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 48rpx;
  position: relative;
}

/* 头部 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 0.8s ease;
}

.logo {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  text-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.app-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  line-height: 1.3;
}

.app-title-second {
  font-size: 56rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: fadeInUp 0.8s ease;
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a650 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  margin-bottom: 32rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.wechat-login-btn.loading {
  opacity: 0.7;
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
}

/* 用户协议 */
.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 22rpx;
  color: #9ca3af;
}

.agreement-text {
  color: #9ca3af;
}

.agreement-link {
  color: #4a90e2;
  margin: 0 4rpx;
}

/* 返回按钮 */
.back-home {
  margin-top: 60rpx;
  padding: 20rpx 40rpx;
  color: white;
  font-size: 28rpx;
  opacity: 0.8;
  animation: fadeIn 1s ease;
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
