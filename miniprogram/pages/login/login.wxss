/* 登录页面样式 */

.page-login {
  min-height: 100vh;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 48rpx;
  position: relative;
}

/* 头部 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 0.8s ease;
}

.logo {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  text-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.app-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  line-height: 1.3;
}

.app-title-second {
  font-size: 56rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  animation: fadeInUp 0.8s ease;
}

.card-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a650 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
  margin-bottom: 32rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.wechat-login-btn.loading {
  opacity: 0.7;
  background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
}

/* 开发环境快速登录 */
.dev-quick-login {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 2rpx solid #e5e7eb;
}

.dev-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #ff6b6b;
  text-align: center;
  margin-bottom: 24rpx;
}

.test-users {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.test-user-btn {
  padding: 14rpx 12rpx;
  background: #f3f4f6;
  color: #374151;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 2rpx solid #d1d5db;
  transition: all 0.3s;
}

.test-user-btn::after {
  border: none;
}

.test-user-btn:active {
  background: #e5e7eb;
  transform: scale(0.96);
}

.test-user-btn.disabled {
  opacity: 0.6;
}

/* 用户协议 - 新样式 */
.agreement-section {
  margin-top: 40rpx;
  padding: 32rpx 24rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  border: 1rpx solid #e5e7eb;
  min-height: 100rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
}

.checkbox-item {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.agreement-text {
  color: #6b7280;
  font-size: 26rpx;
  line-height: 1.6;
}

.agreement-links {
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 42rpx;
  margin-bottom: 4rpx;
  line-height: 1.6;
}

.agreement-link {
  color: #4a90e2;
  margin: 0 6rpx;
  font-weight: 500;
  text-decoration: underline;
}

/* 同意并登录按钮 */
