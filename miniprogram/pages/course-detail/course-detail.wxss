.page-course-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.course-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 40rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.course-period {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.course-date {
  font-size: 24rpx;
  opacity: 0.8;
}

.calendar-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.calendar-title {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.calendar-day.checked {
  background: #e8f4fd;
  border-color: #4a90e2;
}

.calendar-day.pending {
  background: #f9f9f9;
}

.day-number {
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
}

.calendar-day.checked .day-number {
  color: #4a90e2;
}

.day-status {
  font-size: 20rpx;
  color: #4a90e2;
  margin-top: 4rpx;
}

.action-section {
  padding: 32rpx;
}

.enroll-btn {
  width: 100%;
  background: #4a90e2;
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.enroll-btn::after {
  border: none;
}
