/* 排行榜页面样式 */

.page-ranking {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 当前用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar .avatar-text {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-rank {
  font-size: 32rpx;
  font-weight: bold;
}

.user-stats {
  font-size: 24rpx;
  opacity: 0.9;
}

.participant-count {
  font-size: 24rpx;
  opacity: 0.9;
}

/* Tab切换区域 */
.tabs-container {
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs {
  display: inline-flex;
  padding: 0 32rpx;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  position: relative;
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
}

.tab-item.active {
  color: #4a90e2;
  font-weight: bold;
}

.tab-underline {
  position: absolute;
  bottom: 0;
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  border-radius: 3rpx;
}

/* 排行榜列表 */
.ranking-list {
  padding: 24rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.rank-number {
  width: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  text-align: center;
  margin-right: 24rpx;
}

.rank-number.top-three {
  font-size: 48rpx;
}

.rank-icon {
  display: inline-block;
}

.ranking-item .user-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.ranking-item .user-avatar .avatar-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.user-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.checkin-days {
  font-size: 28rpx;
  color: #4a90e2;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 底部固定按钮 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-share {
  width: 100%;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-share::after {
  border: none;
}
