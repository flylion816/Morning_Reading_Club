/* 支付页面样式 */

.page-payment {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #f5f5f5;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading text {
  font-size: 28rpx;
  color: #666;
}

/* 页面容器 */
.payment-container {
  padding: 0;
  padding-bottom: 180rpx;
}

/* 页面头部 */
.payment-header {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  padding: 40rpx 30rpx;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

/* 订单信息卡片 */
.order-card {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.order-card .section {
  padding: 24rpx 20rpx;
}

.section-title {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  display: block;
  margin-bottom: 12rpx;
}

/* 课程信息 */
.course-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.course-subtitle {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: #e8e8e8;
  margin: 0 20rpx;
}

.divider-light {
  height: 1rpx;
  background: #f0f0f0;
  margin: 12rpx 0;
}

/* 价格信息 */
.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.price-row.total {
  margin-bottom: 0;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.price-discount {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.price-total {
  font-size: 36rpx;
  color: #4a90e2;
  font-weight: bold;
}

/* 支付说明 */
.payment-tips {
  padding: 16rpx 20rpx;
  background: #f0f5ff;
  border-radius: 8rpx;
  margin-top: 16rpx;
  display: flex;
  gap: 8rpx;
  align-items: flex-start;
}

.tip-icon {
  font-size: 24rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #4a90e2;
  line-height: 1.6;
}

/* 支付方式选择 */
.payment-methods {
  padding: 20rpx;
}

.methods-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.method-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.method-item.active {
  border-color: #4a90e2;
  background: #f0f5ff;
}

.method-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.method-icon.wechat {
  background: #09b83e;
  color: white;
}

.method-icon.mock {
  background: #ffa500;
  color: white;
}

.method-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.method-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  display: block;
}

.method-desc {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.method-check {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #d8d8d8;
  border-radius: 50%;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.method-check.checked {
  border-color: #4a90e2;
  background: #4a90e2;
  position: relative;
}

.method-check.checked::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 12rpx;
  border: 2rpx solid white;
  border-left: none;
  border-top: none;
  left: 6rpx;
  top: 3rpx;
  transform: rotate(45deg);
}

/* 按钮组 */
.payment-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
}

.btn {
  flex: 1;
  padding: 16rpx 20rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
}

.btn-primary:active:not([disabled]) {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary[disabled] {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-secondary {
  background: #f5f5f5;
  color: #333;
  border: 1rpx solid #e8e8e8;
}

.btn-secondary:active {
  background: #efefef;
  border-color: #d8d8d8;
}

/* 支付结果弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 999;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 16rpx 16rpx 0 0;
  padding: 40rpx 30rpx;
  text-align: center;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.result-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin: 0 auto 20rpx;
}

.result-icon.success {
  background: #e8f5e9;
  color: #4caf50;
}

.result-icon.failed {
  background: #ffebee;
  color: #f44336;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.result-message {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.modal-actions {
  display: flex;
  gap: 12rpx;
}

.modal-actions .btn {
  flex: 1;
  padding: 16rpx 20rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
}

.modal-actions .btn-primary {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
}

.modal-actions .btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.modal-actions .btn-secondary {
  background: #f5f5f5;
  color: #333;
  border: 1rpx solid #e8e8e8;
}

.modal-actions .btn-secondary:active {
  background: #efefef;
}

/* 响应式调整 */
@media (max-width: 360px) {
  .order-card {
    margin: 10rpx;
  }

  .payment-methods {
    padding: 16rpx;
  }

  .payment-actions {
    gap: 8rpx;
    padding: 12rpx 16rpx;
  }
}
