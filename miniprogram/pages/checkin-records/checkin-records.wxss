/* 打卡记录页面样式 */

.page-checkin-records {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.user-avatar .avatar-text {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 统计信息网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4a90e2;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 日历区域 */
.calendar-section {
  background: white;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.calendar-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.month-selector {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.month-btn {
  font-size: 36rpx;
  color: #4a90e2;
  font-weight: bold;
  padding: 8rpx 16rpx;
}

.month-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  min-width: 160rpx;
  text-align: center;
}

.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 16rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 12rpx 0;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  position: relative;
}

.calendar-day.other-month {
  opacity: 0.3;
}

.calendar-day.checked {
  background: #e8f4fd;
  border: 2rpx solid #4a90e2;
}

.day-number {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.calendar-day.checked .day-number {
  color: #4a90e2;
  font-weight: bold;
}

.day-dot {
  width: 8rpx;
  height: 8rpx;
  background: #4a90e2;
  border-radius: 50%;
  position: absolute;
  bottom: 8rpx;
}

/* 打卡记录区域 */
.records-section {
  padding: 0 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-date {
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

.record-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-course {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.record-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  margin-bottom: 16rpx;
  white-space: pre-wrap;
  word-break: break-word;
  max-height: 200rpx;
  overflow: hidden;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-count {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #9ca3af;
}
