/* 首页样式 */

.page-index {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* Banner区域 */
.home-banner {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  padding: 60rpx 40rpx 50rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.home-banner::before {
  content: '';
  position: absolute;
  right: -80rpx;
  top: -80rpx;
  width: 360rpx;
  height: 360rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.banner-text {
  font-weight: 700;
  font-size: 36rpx;
  line-height: 1.7;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: pre-line;
}

/* 筛选按钮 */
.filter-tabs {
  display: flex;
  gap: 20rpx;
  padding: 32rpx 32rpx 24rpx;
  background: #ffffff;
}

.filter-btn {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  background: #f5f5f5;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-btn.active {
  background: #4a90e2;
  color: #ffffff;
  font-weight: 600;
}

/* 课程容器 */
.courses-container {
  padding: 32rpx;
  background: #ffffff;
  min-height: 60vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #cbd5e0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #9ca3af;
}
