/* 首页样式 */

.page-index {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部横幅 */
.home-banner {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  padding: 60rpx 32rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  min-height: 180rpx;
}

.banner-text-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.banner-text {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  line-height: 1.2;
}

.banner-subtext {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 期次列表容器 */
.periods-container {
  padding: 32rpx;
  background: #ffffff;
  min-height: 60vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #cbd5e0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 期次包装器 - 可点击 */
.period-wrapper {
  margin-bottom: 24rpx;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  position: relative;
  transition: all 0.2s ease;
}

.period-wrapper:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-2rpx);
}

/* 报名状态标签 */
.enrollment-label {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
}

.label-text {
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.enrolled-text {
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}
