/* 首页样式 */

.page-index {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* Banner区域 */
.home-banner {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  padding: 60rpx 40rpx 50rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.home-banner::before {
  content: '';
  position: absolute;
  right: -80rpx;
  top: -80rpx;
  width: 360rpx;
  height: 360rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.banner-text {
  font-weight: 700;
  font-size: 36rpx;
  line-height: 1.7;
  position: relative;
  z-index: 1;
  letter-spacing: 1rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  white-space: pre-line;
}

/* 期次列表容器 */
.periods-container {
  padding: 32rpx;
  background: #ffffff;
  min-height: 60vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(74, 144, 226, 0.2);
  border-top-color: #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.loading-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #cbd5e0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 期次包装器 */
.period-wrapper {
  margin-bottom: 24rpx;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 报名状态和按钮区域 */
.period-actions {
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 报名状态 */
.enrollment-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 已报名状态 */
.enrollment-status.enrolled {
  background: #f0f9ff;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
}

.status-badge {
  font-size: 26rpx;
  font-weight: 600;
  color: #4caf50;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.status-tip {
  font-size: 22rpx;
  color: #757575;
  margin-left: auto;
}

/* 报名按钮 */
.enroll-btn {
  width: 100%;
  padding: 14rpx 20rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  cursor: pointer;
}

.enroll-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
