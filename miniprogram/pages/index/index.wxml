<!--首页 - 期次列表-->
<view class="page-index">
  <!-- 顶部Banner -->
  <view class="home-banner">
    <view class="banner-text">☀️ 【代码已更新】 {{bannerText}}\n🌄 {{subBannerText}}</view>
  </view>

  <!-- 今日任务区域 -->
  <view class="today-task-section">
    <view class="today-task-header">
      <text class="today-task-title">📅 今日任务</text>
    </view>
    <view class="today-date-range">
      2025-11-27 00:00:00 - 2025-11-27 23:59:59
    </view>
  </view>

  <!-- 期次列表 -->
  <view class="periods-container">
    <view
      wx:for="{{periods}}"
      wx:key="_id"
      class="period-wrapper"
      catchtap="handlePeriodClick"
      data-period-id="{{item._id}}"
      data-period-name="{{item.name}}"
    >
      <course-card
        course="{{item}}"
        mode="period"
        enrolled="{{periodEnrollmentStatus[item._id]}}"
      />

      <!-- 报名/已报名状态标签 -->
      <view class="enrollment-label" wx:if="{{periodEnrollmentStatus[item._id]}}">
        <text class="label-text enrolled-text">✓ 已报名</text>
      </view>
    </view>

    <!-- 加载中 -->
    <view wx:if="{{loading && periods.length === 0}}" class="loading-container">
      <view class="loading-spinner"></view>
      <text class="loading-text">加载中...</text>
    </view>

    <!-- 空状态 -->
    <view wx:if="{{!loading && periods.length === 0}}" class="empty-state">
      <text class="empty-state-icon">📚</text>
      <text class="empty-state-text">暂无期次</text>
    </view>
  </view>
</view>
