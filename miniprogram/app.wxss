/**
 * 晨读营小程序 - 全局样式
 */

/* 全局样式重置 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', sans-serif;
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.5;
}

view {
  box-sizing: border-box;
}

/* 通用工具类 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-center {
  text-align: center;
}

.hidden {
  display: none;
}
